(
  defpoll time
  :interval "1s"
  `date +'%Y-%m-%d %H:%M:%S'`
)

(
defwidget date_time []
 (
  eventbox
   :cursor "pointer"
   ;; :onhover "eww open-many calendar0 calendar1"
   ;; :onhoverlost "eww close calendar0 calendar1"
   (
    box
     :class "time"
     :orientation "h"
     :valign "center"
    (
     button
     :onclick "eww open-many calendar0 calendar1 --toggle"
     "${time}"
    )
  )
 )
)
