(
  defpoll time
  :interval "1s"
  `date +'{"hour":"%H", "minute":"%M"}'`
)

(
defwidget date_time []
 (
  eventbox
   :cursor "pointer"
   (
    box
     :orientation "v"
     :valign "center"
    (
     button
     :onclick "eww open-many calendar0 calendar1 --toggle"
     "${time.hour}"
    )
   (
     button
     :onclick  "eww open-many calendar0 calendar1 --toggle"
     "${time.minute}"
   )
  )
 )
)
