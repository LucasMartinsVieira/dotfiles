(
 deflisten date
 `date +'{"year":"%Y", "month":"+%m", "day":"+%d"}'`
)

(
  defwidget cal []
  (
    box
    :class "cal-box"
    :orientation "h"

    (
      box
      :class "cal-inner-box"

      (
        calendar
        :class "cal"
        :day "${date.day}"
        :month "${date.month}"
        :year "${date.year}"
      )
    )
  )
)
