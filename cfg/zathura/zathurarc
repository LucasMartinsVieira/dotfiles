## Moonfly
set notification-error-bg       "#ff5454" # Red
set notification-error-fg       "#b2b2b2" # Foreground
set notification-warning-bg     "#e3c78a" # Yellow
set notification-warning-fg     "#b2ceee" # Selection
set notification-bg             "#080808" # Background
set notification-fg             "#b2b2b2" # Foreground

set completion-bg               "#080808" # Background
set completion-fg               "#080808" # Comment
set completion-group-bg         "#080808" # Background
set completion-group-fg         "#080808" # Comment
set completion-highlight-bg     "#b2ceee" # Selection
set completion-highlight-fg     "#b2b2b2" # Foreground
set index-bg                    "#080808" # Background
set index-fg                    "#b2b2b2" # Foreground
set index-active-bg             "#080808" # Current Line
set index-active-fg             "#b2b2b2" # Foreground

set inputbar-bg                 "#080808" # Background
set inputbar-fg                 "#b2b2b2" # Foreground
set statusbar-bg                "#080808" # Background
set statusbar-fg                "#b2b2b2" # Foreground

set highlight-color             "#e3c78a" # Yellow
set highlight-active-color      "#80a0ff" # Blue

set default-bg                  "#080808" # Background
set default-fg                  "#b2b2b2" # Foreground

set render-loading              true
set render-loading-fg           "#080808" # Background
set render-loading-bg           "#b2b2b2" # Foreground

# Recolor mode settings

set recolor-lightcolor          "#080808" # Background
set recolor-darkcolor           "#b2b2b2" # Foreground
