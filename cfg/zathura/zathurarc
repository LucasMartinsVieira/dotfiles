# Clipboard
set selection-clipboard clipboard

# Startup Options
set adjust-open "best-fit"
set recolor true

# Remaps
map r reload
map J zoom out
map K zoom in
map i recolor
# unmap f
# map f toggle_fullscreen
# map [fullscreen] f toggle_fullscreen

set font "JetBrainsMono Nerd Font 9"

