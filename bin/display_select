#!/usr/bin/env bash

ROFI="rofi -show -dmenu -i -l 4 -p"
VARIABLE="$1"

normal() {
	case "$XDG_SESSION_TYPE" in
	'x11')
		if xrandr | grep "HDMI-1 connected" >/dev/null; then
			xrandr --output eDP-1 --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
		else
			xrandr --output eDP-1 --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --off
		fi
		;;
	'wayland')
		if wlr-randr | grep 'HDMI-A-1' >/dev/null; then
			wlr-randr --output eDP-1 --mode 1920x1080 --pos 1920,0 --transform normal --output HDMI-A-1 --preferred --mode 1920x1080 --pos 0,0 --transform normal
		else
			wlr-randr --output eDP-1 --mode 1920x1080 --pos 1920,0 --transform normal --output HDMI-A-1 --off
		fi
		;;
	 *) err "Unknown display server" ;;
	esac
}

# shellcheck disable=SC2120
rofi_menu() {
	declare -a options=(
		"HDMI + Notebook"
		"HDMI Only"
		"Notebook Only"
	)

	choice=$(printf '%s\n' "${options[@]}" | sort | ${ROFI} 'Choose a option: ' "${@}")

	case $choice in
	"HDMI + Notebook")
		if [[ "$XDG_SESSION_TYPE" == 'x11' ]]; then
			xrandr --output eDP-1 --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
		elif [[ "$XDG_SESSION_TYPE" == 'wayland' ]]; then
			wlr-randr --output eDP-1 --on --mode 1920x1080 --pos 1920,0 --transform normal --output HDMI-A-1 --on --preferred --mode 1920x1080 --pos 0,0 --transform normal
		fi
		;;
	"HDMI Only")
		if [[ "$XDG_SESSION_TYPE" == 'x11' ]]; then
			xrandr --output eDP-1 --off --output HDMI-1 --on --primary --mode 1920x1080 --pos 0x0 --rotate normal
		elif [[ "$XDG_SESSION_TYPE" == 'wayland' ]]; then
			wlr-randr --output eDP-1 --off --output HDMI-A-1 --on --preferred --mode 1920x1080 --pos 0,0 --transform normal
		fi
		;;
	"Notebook Only")
		if [[ "$XDG_SESSION_TYPE" == 'x11' ]]; then
		  xrandr --output eDP-1 --on --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --off
		elif [[ "$XDG_SESSION_TYPE" == 'wayland' ]]; then
			wlr-randr --output eDP-1 --on --mode 1920x1080 --pos 1920,0 --transform normal --output HDMI-A-1 --off
		fi
		;;
	esac
}

if [ "$VARIABLE" == "-v" ]; then
	rofi_menu
else
	normal
fi
